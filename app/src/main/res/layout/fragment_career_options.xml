<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/backgroundresponsive"
  tools:context=".CareerOptionsFragment">


  <!-- TODO: Update blank fragment layout -->
  <ImageView
    android:id="@+id/cp"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginTop="60dp"
    android:src="@drawable/careeroptions"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
  <androidx.cardview.widget.CardView
    android:id="@+id/career"
    android:layout_width="330dp"
    android:layout_height="320dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cp">
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/profile"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Career Options | CareerPath"
        android:textColor="#0b0b0b"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
      <TextView
        android:id="@+id/textpr"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="5dp"
        android:text="After your have utilized our products CareerParamarsh or CareerDisha you can further opt for CareerMarg. This product helps you visualize your career progression and gives a predictive future career options based on your profile and future goals. You can pick and choose your career choices based on our recommendations and see your future 5 years, 10 years or 20 years down the line in the form of type of job function, type of company, position, salary, returns/savings, etc."
        android:textColor="#0b0b0b"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/profile"/>
      <Button
        android:id="@+id/option"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/regbut"
        android:text="Talk to counsellors"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/textpr"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>