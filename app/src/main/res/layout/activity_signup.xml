<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundresponsive"
    tools:context=".auth.SignupActivity">
   <!-- <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prof"/>-->
 <ImageView
     android:layout_width="100dp"
     android:layout_height="100dp"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginTop="5dp"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:src="@drawable/careernaksha_icon"
     android:id="@+id/icon"/>


 <androidx.cardview.widget.CardView
     android:layout_width="300dp"
     android:layout_height="280dp"
     android:padding="20dp"
     app:layout_constraintTop_toBottomOf="@id/icon"
     android:layout_marginTop="10dp"
    app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:cardCornerRadius="10dp"
     android:id="@+id/card"


     >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/li">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
      >


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/et1"
        android:layout_marginTop="20dp"

        android:hint="Name"
        android:drawableLeft="@drawable/ic_person_black_24dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/et2"
        android:layout_marginTop="0dp"
        android:hint="Mobile"

        android:inputType="number"
        android:drawableLeft="@drawable/ic_phone_black_24dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/et3"
        android:layout_marginTop="0dp"
        android:hint="Email"

        android:drawableLeft="@drawable/ic_email_black_24dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/et4"
        android:layout_marginTop="20dp"
        android:hint="Password"

        android:drawableLeft="@drawable/ic_lock_black_24dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/bt1"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="#483D8B"
        android:background="@drawable/regbut"
        />

   </LinearLayout>




  </LinearLayout>





 </androidx.cardview.widget.CardView>


 <TextView
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:text="OR"
     android:textColor="#FFF"
     app:layout_constraintTop_toBottomOf="@id/card"
     android:layout_marginTop="10dp"

     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:gravity="center"

     android:id="@+id/or"
     android:textStyle="bold"/>
 <TextView
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:text="REGISTER WITH"
     android:textColor="#4169E1"
     app:layout_constraintTop_toBottomOf="@id/or"
     android:layout_marginTop="10dp"

     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
  android:gravity="center"
     android:id="@+id/register"
     android:textStyle="bold"/>

 <LinearLayout
     android:layout_width="300dp"
     android:layout_height="60dp"
     app:layout_constraintTop_toBottomOf="@id/register"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:gravity="center"
     android:orientation="horizontal">

  <ImageView
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:src="@drawable/google_plus_icon"
      android:layout_marginLeft="5dp"
      android:id="@+id/googleSignInButton"/>

  <ImageView
    android:layout_width="50dp"
    android:layout_height="match_parent"
    android:src="@drawable/twitter_icon"
    android:layout_marginLeft="5dp"
    android:id="@+id/twitter"/>
  <ImageView
    android:layout_width="50dp"
    android:layout_height="match_parent"
    android:src="@drawable/fb_icon"
    android:layout_marginLeft="5dp"
    android:id="@+id/fb"/>
 </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>