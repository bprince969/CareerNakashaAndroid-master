<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThankyouFragment"
    android:background="@drawable/backgroundresponsive">

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="130dp"
    android:id="@+id/imagethank"
    android:src="@drawable/thankyou"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/imagethank"
        android:text="Thank you!"
        android:textColor="#fff"
        android:gravity="center"
        android:id="@+id/textthanks"
        android:textSize="17sp"
        android:textStyle="bold"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:layout_constraintTop_toBottomOf="@id/textthanks"
    android:gravity="center_horizontal"
    android:textColor="#fff"
    android:text="Your personal counselor will get in touch shortly or feel free to reach out at 84691-49288 or
support@careernaksha.com" />

</androidx.constraintlayout.widget.ConstraintLayout>