<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/backgroundresponsive"
  tools:context=".CareerPatriFragment">
  <ImageView
    android:id="@+id/cp"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginTop="80dp"
    android:src="@drawable/profilebuilder"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <androidx.cardview.widget.CardView
    android:id="@+id/career"
    android:layout_width="330dp"
    android:layout_height="250dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cp">
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <TextView
        android:id="@+id/profile"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Profile Builder | CareerPatri"
        android:textColor="#0b0b0b"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
      <TextView
        android:id="@+id/textpr"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="5dp"
        android:text="A custom profile builder using personas to build usersâ€™ profile. We collect users data to recommend the best suitable profile based on the users  strengths. Build a resume/CV/profile which will get you noticed and land you that dream job."
        android:textColor="#0b0b0b"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/profile"/>
      <Button
        android:id="@+id/patri"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/regbut"
        android:text="Talk to counsellors"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/textpr"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>