<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/content"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#EDEDED"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".ProfileActivity"
  tools:showIn="@layout/app_bar_profile">

  <FrameLayout
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:id="@+id/icon_layout"
      android:layout_width="match_parent"
      android:layout_height="200dp"

      android:background="@drawable/gradient_background"
      tools:ignore="MissingConstraints">
      <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/main_icon"
        />
      <TextView
        android:id="@+id/t"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#fff"
        android:textSize="15sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



    </RelativeLayout>

    <ScrollView
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
          android:id="@+id/layout_cardview"
          android:orientation="horizontal"
          android:layout_marginTop="130dp"

          android:layout_height="200dp"
          android:layout_width="fill_parent"
          tools:ignore="MissingConstraints">

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivprofilebuilder"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:clickable="true"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              android:elevation="20dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />


              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/profilebuilder"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Profile Builder"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>
          </LinearLayout>

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivguidance"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              android:elevation="20dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />

              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/guidance"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Guidance"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>

          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/layout_cardview2"
          android:orientation="horizontal"
          android:layout_marginTop="30dp"
          android:layout_below="@+id/layout_cardview"
          android:layout_height="200dp"
          android:layout_width="fill_parent"
          tools:ignore="MissingConstraints">

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivjob"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />

              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/job"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Job"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>
          </LinearLayout>

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivcounselling"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />

              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/counseling"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Counseling"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>

          </LinearLayout>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/layout_cardview3"
          android:orientation="horizontal"
          android:layout_marginTop="30dp"
          android:layout_below="@+id/layout_cardview2"
          android:layout_height="200dp"
          android:layout_width="fill_parent"
          tools:ignore="MissingConstraints">

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivalumini"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />

              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/alumini"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Alumini"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>
          </LinearLayout>

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivoption"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />

              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/careeroptions"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Career options"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>

          </LinearLayout>
        </LinearLayout>


        <LinearLayout
          android:id="@+id/layout_cardview4"
          android:orientation="horizontal"
          android:layout_marginTop="30dp"
          android:layout_below="@+id/layout_cardview3"
          android:layout_height="200dp"
          android:layout_width="fill_parent"
          tools:ignore="MissingConstraints">

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivinspire"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />

              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/inspirational"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Inspirational"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>
          </LinearLayout>

          <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
              android:id="@+id/ivpsycho"
              android:layout_width="match_parent"
              android:layout_marginLeft="15dp"
              android:layout_height="match_parent"
              android:layout_marginRight="10dp"
              app:cardCornerRadius="20dp">
              <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/backgroundresponsive"
                />

              <ImageView
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:src="@drawable/psychometric"
                />
              <TextView
                android:layout_gravity="bottom"
                android:text="Psychometric"
                android:textColor="#111"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
            </androidx.cardview.widget.CardView>

          </LinearLayout>
        </LinearLayout>


      </RelativeLayout>
    </ScrollView>
  </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

