<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SlotFragment"
    android:background="@drawable/backgroundresponsive">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/appday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/ivappday"/>
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/cvappday"
        app:layout_constraintTop_toBottomOf="@id/ivappday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pick Slot"
                android:layout_marginLeft="100dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0b0b0b"/>
        </LinearLayout>




    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivmon"
        app:layout_constraintTop_toBottomOf="@id/cvappday"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btnmon"
        app:layout_constraintTop_toBottomOf="@id/cvappday"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="Monday"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivtues"
        app:layout_constraintTop_toBottomOf="@id/ivmon"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btntues"
        app:layout_constraintTop_toBottomOf="@id/ivmon"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="Tuesday"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivwed"
        app:layout_constraintTop_toBottomOf="@id/ivtues"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btnwed"
        app:layout_constraintTop_toBottomOf="@id/ivtues"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="Wednesday"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivthurs"
        app:layout_constraintTop_toBottomOf="@id/ivwed"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btnthurs"
        app:layout_constraintTop_toBottomOf="@id/ivwed"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="Thursday"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivfri"
        app:layout_constraintTop_toBottomOf="@id/ivthurs"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btnfri"
        app:layout_constraintTop_toBottomOf="@id/ivthurs"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="Friday"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivsat"
        app:layout_constraintTop_toBottomOf="@id/ivfri"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btnsat"
        app:layout_constraintTop_toBottomOf="@id/ivfri"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="Saturday"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:id="@+id/ivsun"
        app:layout_constraintTop_toBottomOf="@id/ivsat"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/regbut"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:id="@+id/btnsun"
        app:layout_constraintTop_toBottomOf="@id/ivsat"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#0b0b0b"
        android:text="Sunday"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>