<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Time"
        android:textSize="25sp"
        android:textColor="#151515"
        android:textStyle="bold"
        android:layout_marginLeft="120dp"
        android:id="@+id/textView"
        android:layout_marginTop="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/car1"
        android:layout_below="@id/textView"
        >
     <TimePicker
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/tpp">

     </TimePicker>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/car1"
        android:layout_marginTop="20dp"
        android:id="@+id/car2"
        android:layout_marginLeft="30dp"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f54f81">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6:00 PM"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#151515"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/car1"
        android:layout_toRightOf="@id/car2"
        android:layout_marginTop="20dp"
        android:id="@+id/car3"
        android:layout_marginLeft="20dp"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f54f81">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6:30 PM"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textColor="#151515"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/car2"
        android:layout_marginTop="20dp"
        android:id="@+id/car4"
        android:layout_marginLeft="30dp"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f54f81">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7:00 PM"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textColor="#151515"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/car3"
        android:layout_toRightOf="@id/car4"
        android:layout_marginTop="20dp"
        android:id="@+id/car5"
        android:layout_marginLeft="20dp"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f54f81">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7:30 PM"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textColor="#151515"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/car4"
        android:layout_marginTop="20dp"
        android:id="@+id/car6"
        android:layout_marginLeft="100dp"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f54f81">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8:00 PM"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:textColor="#151515"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>