<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BasicFragment"
    android:background="@drawable/backgroundresponsive"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/regbut"
                android:id="@+id/linear"
                android:orientation="vertical">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="04"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="32sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Professional Infromation"
                    android:textSize="15sp"
                    android:textColor="#fff"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:id="@+id/job"
                        android:text="Job 1"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="10dp"
                        android:textColor="#18d9ac"
                        android:gravity="center"/>

                    <ImageView
                        android:layout_width="265dp"
                        android:layout_height="55dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/job"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ivedit1"
                        android:src="@drawable/regbut"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="261dp"
                        android:layout_height="45dp"
                       app:layout_constraintTop_toBottomOf="@id/job"
                        android:gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="14.5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="#fff">
                        <EditText
                            android:layout_width="265dp"
                            android:layout_height="55dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/pr1"
                            android:hint="  Position and Role"
                            android:textSize="14sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/job"
                            android:layout_marginTop="2.5dp"
                            android:layout_marginLeft="5dp"
                            android:background="#fff"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:layout_width="265dp"
                        android:layout_height="55dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivedit1"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ivedit2"
                        android:src="@drawable/regbut"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="261dp"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/ivedit1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:background="#fff"

                        app:layout_constraintRight_toRightOf="parent">
                        <EditText
                            android:layout_width="265dp"
                            android:layout_height="55dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/pr2"
                            android:hint=" Salary"

                            android:textSize="14sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivedit1"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="5dp"
                            android:background="#fff"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:layout_width="265dp"
                        android:layout_height="55dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivedit2"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ivedit3"
                        android:src="@drawable/regbut"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="261dp"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/ivedit2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"
                        android:background="#fff">
                        <EditText
                            android:layout_width="262dp"
                            android:layout_height="46dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/pr3"
                            android:textSize="14sp"
                            android:hint="  Location"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivedit2"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:background="#fff"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:id="@+id/job2"
                        android:text="Job 2"
                        android:textSize="15sp"
                        app:layout_constraintTop_toBottomOf="@id/ivedit3"
                        android:layout_marginTop="10dp"
                        android:textColor="#18d9ac"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="265dp"
                        android:layout_height="55dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/job2"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ivedit4"
                        android:src="@drawable/regbut"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="261dp"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/job2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"
                        android:background="#fff"

                        >
                        <EditText
                            android:layout_width="265dp"
                            android:layout_height="55dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/pr4"
                            android:hint="  Position and Role"
                            android:textSize="14sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/job2"
                            android:layout_marginTop="12dp"
                            android:background="#fff"
                            android:layout_marginLeft="5dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="265dp"
                        android:layout_height="55dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivedit4"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ivedit5"
                        android:src="@drawable/regbut"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="261dp"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/ivedit4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"
                        android:background="#fff"

                        >
                        <EditText
                            android:layout_width="265dp"
                            android:layout_height="55dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/pr5"
                            android:hint="  Salary"
                            android:textSize="14sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivedit4"
                            android:layout_marginTop="12dp"
                            android:background="#fff"
                            android:layout_marginLeft="5dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="265dp"
                        android:layout_height="55dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivedit5"
                        android:layout_marginTop="5dp"
                        android:id="@+id/ivedit6"
                        android:src="@drawable/regbut"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="261dp"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/ivedit5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:gravity="center"
                        android:background="#fff"

                        >
                        <EditText
                            android:layout_width="265dp"
                            android:layout_height="55dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/pr6"
                            android:hint="  Position and Role"
                            android:textSize="14sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivedit5"
                            android:layout_marginTop="12dp"
                            android:background="#fff"
                            android:layout_marginLeft="5dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="45dp"
                        android:id="@+id/bpr"
                        app:layout_constraintTop_toBottomOf="@id/ivedit6"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/regbut"
                        android:text="Save and Proceed"
                        android:textColor="#fff"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>