<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/backgroundresponsive"
  android:gravity="center"
  tools:context=".MainActivity">

  <ImageView
    android:id="@+id/logo"
    android:layout_centerHorizontal="true"
    android:layout_width="150dp"

    android:layout_height="150dp"
    android:fadingEdge="horizontal"
    android:focusable="true"
    android:src="@drawable/careernaksha_icon"
    />
  <TextView
    android:id="@+id/careernakasha"
    android:layout_below="@+id/logo"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:textColor="#BFBDBD"
    android:text="CareerNakasha"
    android:textSize="20dp"
    android:layout_marginTop="20dp"
    android:textStyle="bold"

    />
  <TextView
    android:layout_below="@+id/careernakasha"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:textColor="#BFBDBD"
    android:text="Your personal career counsellor"
    android:textStyle="italic"
    android:textSize="10dp"


    />

</RelativeLayout>

