<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CareerParmarshFragment"
    android:background="@drawable/backgroundresponsive">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/counseling"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            android:id="@+id/cp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="290dp"
            app:layout_constraintTop_toBottomOf="@id/cp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:id="@+id/career"
            app:cardCornerRadius="15dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
              <TextView
                android:id="@+id/profile"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Counseling | CareerPramarsh"
                android:textColor="#0b0b0b"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:padding="5dp"
                    android:text="A personalized data driven approach to career counselling where we analyse the history and profile of the user using our proprietary algorithms and machine learning models. Based on the data, we  predict the best possible career path for the user. Our conselor will also setup a 1:1 meeting to provide an end to end guidance. Try our career counseling and successfully live the life you want to be."
                    android:textColor="#0b0b0b"
                    android:id="@+id/textpr"
                    app:layout_constraintTop_toBottomOf="@id/profile"
                    android:textSize="15sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/regbut"
                    android:text="Talk to counsellors"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/textpr"
                    android:textSize="15sp"
                    android:id="@+id/parmarsh"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>